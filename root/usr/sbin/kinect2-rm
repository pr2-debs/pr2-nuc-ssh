#!/bin/bash

echo 'removing kinect2_bridge launch from upstart file...'

if [ -d "/etc/ros/groovy" ];
then
    echo "groovy exists..."
    sed -i '/<machine name="pr2-head" address="pr2-head"/,6 d' /etc/ros/groovy/robot.launch
fi

if [ -d "/etc/ros/hydro" ];
then
    echo "hydro exists..."
    sed -i '/<machine name="pr2-head" address="pr2-head"/,6 d' /etc/ros/hydro/robot.launch

if [ -d "/etc/ros/indigo" ];
then
    echo "indigo exists..."
    sed -i '/<machine name="pr2-head" address="pr2-head"/,6 d' /etc/ros/indigo/robot.launch
fi

    sed -i '/<machine name="pr2-head" address="pr2-head"/,6 d' /etc/ros/robot.launch

echo 'kinect2_bridge removed from upstart'
